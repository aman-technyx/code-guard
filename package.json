{
    "name": "@qvaroo/configs",
    "version": "1.0.3",
    "description": "Centralized Qvaroo coding standards, ESLint, Prettier, and TypeScript configurations for TypeScript frontend projects",
    "main": "index.js",
    "types": "index.d.ts",
    "author": "Qvaroo DevOps Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/aman-technyx/code-guard.git"
    },
    "keywords": [
        "eslint",
        "prettier",
        "typescript",
        "config",
        "qvaroo-standards",
        "linting",
        "code-quality"
    ],
    "files": [
        "eslint/",
        "prettier/",
        "typescript/",
        "index.js",
        "index.d.ts"
    ],
    "exports": {
        ".": {
            "import": "./index.mjs",
            "require": "./index.js",
            "default": "./index.js"
        },
        "./eslint": {
            "import": "./eslint/index.mjs",
            "require": "./eslint/index.js",
            "default": "./eslint/index.js"
        },
        "./eslint/react": {
            "import": "./eslint/react.mjs",
            "require": "./eslint/react.js",
            "default": "./eslint/react.js"
        },
        "./eslint/node": {
            "import": "./eslint/node.mjs",
            "require": "./eslint/node.js",
            "default": "./eslint/node.js"
        },
        "./prettier": {
            "import": "./prettier/index.mjs",
            "require": "./prettier/index.js",
            "default": "./prettier/index.js"
        },
        "./typescript": "./typescript/tsconfig.json",
        "./typescript/react": "./typescript/tsconfig.react.json",
        "./typescript/node": "./typescript/tsconfig.node.json"
    },
    "scripts": {
        "lint": "eslint \"**/*.{js,ts}\" --ignore-pattern node_modules/",
        "format": "prettier --write .",
        "test": "echo \"No tests yet\" && exit 0",
        "prepublishOnly": "echo \"Skipping lint for publish\""
    },
    "peerDependencies": {
        "eslint": "^8.0.0 || ^9.0.0",
        "prettier": "^3.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint-plugin-spellcheck": "^0.0.20",
        "eslint-plugin-boundaries": "^4.0.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-promise": "^6.1.0",
        "eslint-plugin-unicorn": "^51.0.0",
        "eslint-plugin-sonarjs": "^0.24.0",
        "eslint-config-prettier": "^9.1.0"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "prettier": "^3.2.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}